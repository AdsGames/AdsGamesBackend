{
  "name": "ads-games-backend",
  "version": "1.0.0",
  "description": "Backend for A.D.S. Games",
  "main": "src/index.ts",
  "repository": "https://github.com/ADSgames/AdsGamesBackend.git",
  "author": "Allan Legemaate <alegemaate@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "start-dev": "nodemon --config \"./util/nodemon.json\"/",
    "build": "rm -rf ./build/ && tsc",
    "migrate": "npx knex migrate:latest",
    "rollback": "npx knex migrate:rollback",
    "seed": "npx knex seed:run",
    "db-init": "yarn rollback && yarn migrate && yarn seed;",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "type-check": "tsc",
    "format-check": "prettier --check \"src/**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "apollo-server": "^2.10.0",
    "graphql": "^15.4.0",
    "pg": "^8.5.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^14.0.13",
    "@types/pg": "^7.14.1",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "knex": "^0.21.13",
    "merge-graphql-schemas": "^1.7.6",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
