{
  "name": "AdsGamesBackend",
  "version": "1.0.0",
  "description": "Backend for A.D.S. Games",
  "main": "src/index.ts",
  "repository": "https://github.com/ADSgames/AdsGamesBackend.git",
  "author": "Allan Legemaate <alegemaate@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "start-dev": "nodemon --config \"./util/nodemon.json\"/",
    "build": "rm -rf ./build/ && tsc",
    "migrate": "npx knex migrate:latest",
    "rollback": "npx knex migrate:rollback",
    "seed": "npx knex seed:run",
    "codegen": "graphql-codegen --config codegen.yml",
    "db-init": "yarn rollback && yarn migrate && yarn seed;"
  },
  "dependencies": {
    "apollo-server": "^2.14.2",
    "graphql": "^14.6.0",
    "pg": "^7.18.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/introspection": "1.12.2",
    "@graphql-codegen/typescript": "^1.12.2",
    "@graphql-codegen/typescript-resolvers": "1.12.2",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^13.7.0",
    "@types/pg": "^7.14.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "knex": "^0.20.9",
    "merge-graphql-schemas": "^1.7.6",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
